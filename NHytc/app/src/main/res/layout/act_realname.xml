<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/title_bar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dip"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dip"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 真 实 姓 名："
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="@color/blue_dark"
            />
        <EditText
            android:id="@+id/et_partjob_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:maxLength="20"
            android:layout_marginRight="10dip"
            android:background="@null"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/lightgrey"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dip"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
     >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证号码："
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="@color/blue_dark"
            />
        <EditText
            android:id="@+id/iden_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:maxLength="18"
            android:layout_marginRight="10dip"
            android:background="@null"
            />
        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="30dip"
        />

    <RelativeLayout
        android:id="@+id/first_upload"
        android:layout_width="match_parent"
        android:layout_height="39dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:src="@mipmap/first_iden"
                android:layout_marginLeft="6dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证正面"
                android:layout_marginLeft="6dp"
                android:textSize="16sp"
                android:textColor="@color/blue_dark"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            >

            <TextView
                android:id="@+id/first_modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传"
                android:layout_marginLeft="6dp"
                android:textSize="16sp"
                android:textColor="@color/blue_dark"
                />

            <ImageView
                android:layout_width="22sp"
                android:layout_height="22sp"
                android:src="@drawable/iconfontright"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dip"
                />


        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/lightgrey"/>
    <RelativeLayout
        android:id="@+id/sec_upload"
        android:layout_width="match_parent"
        android:layout_height="39dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:src="@mipmap/sec_iden"
                android:layout_marginLeft="6dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证反面"
                android:layout_marginLeft="6dp"
                android:textSize="16sp"
                android:textColor="@color/blue_dark"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            >

            <TextView
                android:id="@+id/sec_modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传"
                android:layout_marginLeft="6dp"
                android:textSize="16sp"
                android:textColor="@color/blue_dark"
                />

            <ImageView
                android:layout_width="22sp"
                android:layout_height="22sp"
                android:src="@drawable/iconfontright"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dip"
                />


        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/lightgrey"/>
    <RelativeLayout
        android:id="@+id/hand_upload"
        android:layout_width="match_parent"
        android:layout_height="39dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:src="@mipmap/hand_iden"
                android:layout_marginLeft="6dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手持身份证"
                android:layout_marginLeft="6dp"
                android:textSize="16sp"
                android:textColor="@color/blue_dark"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            >

            <TextView
                android:id="@+id/hand_modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传"
                android:layout_marginLeft="6dp"
                android:textSize="16sp"
                android:textColor="@color/blue_dark"
                />

            <ImageView
                android:layout_width="22sp"
                android:layout_height="22sp"
                android:src="@drawable/iconfontright"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dip"
                />


        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dip"
        />

</LinearLayout>
