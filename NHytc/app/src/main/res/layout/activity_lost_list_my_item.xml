<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/ll_my_lost_list_item"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginTop="6dip"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    >
                    <com.hytc.nhytc.view.CircleImageView
                        android:id="@+id/iv_my_lost_head"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/head"
                        android:layout_marginLeft="10dip"
                        android:layout_gravity="center_vertical"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_my_username_lost"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="孙其用"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:layout_marginLeft="5dip"
                            />
                        <TextView
                            android:id="@+id/tv_my_time_lost"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="今天12:10"
                            android:layout_alignParentBottom="true"
                            android:textSize="9sp"
                            android:layout_marginLeft="5dip"
                            android:singleLine="true"
                            />

                    </RelativeLayout>


                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拾获失物"
                    android:layout_marginLeft="10dip"
                    android:textColor="@color/blue_dark"
                    />
                <TextView
                    android:id="@+id/tv_my_lost_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="饭卡"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dip"
                    android:textColor="@color/blue_dark"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拾获地点"
                    android:layout_marginLeft="10dip"
                    android:textColor="@color/blue_dark"
                    />
                <TextView
                    android:id="@+id/tv_my_lost_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="操场"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dip"
                    android:textColor="@color/blue_dark"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拾获时间"
                    android:layout_marginLeft="10dip"
                    android:textColor="@color/blue_dark"
                    />
                <TextView
                    android:id="@+id/tv_my_lost_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2月4日"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dip"
                    android:textColor="@color/blue_dark"
                    />
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_my_content_lost_list_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxLines="6"
                android:layout_margin="10dp"
                android:text="失物介绍.."
                android:ellipsize="end"
                android:textColor="@color/black"
                />

            <com.hytc.nhytc.view.MyGirdView
                android:id="@+id/gl_my_picture_lost_list_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:layout_marginLeft="10dip"
                >
            </com.hytc.nhytc.view.MyGirdView>
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@color/ivory_background"
            />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            >



            <LinearLayout
                android:id="@+id/ll_my_context_lost_item"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="4dip"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                >

                <TextView
                    android:id="@+id/tv_lost_list_item1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="删除"
                    android:textSize="13sp"
                    android:layout_marginRight="5dip"
                    android:layout_marginLeft="10dip"
                    />

                <ImageView
                    android:id="@+id/iv_lost_list_item1"
                    android:layout_width="21dip"
                    android:layout_height="21dip"
                    android:src="@mipmap/icondelete"
                    android:layout_marginRight="10dip"
                    />


            </LinearLayout>


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="8dip"
            android:background="@color/ivory_background"
            />

    </LinearLayout>
</RelativeLayout>

