<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efffffff"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SGL网络科技"
            android:textSize="23sp"
            android:textColor="@color/gray"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在世上诸般美好事物中"
            android:textSize="15sp"
            android:layout_marginTop="25dip"
            android:textColor="@color/gray"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有两者最公平"
            android:textSize="15sp"
            android:layout_marginTop="7dip"
            android:textColor="@color/gray"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="那就是青春与梦想"
            android:textSize="15sp"
            android:layout_marginTop="7dip"
            android:textColor="@color/gray"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="它不分尊卑"
            android:textSize="15sp"
            android:layout_marginTop="7dip"
            android:textColor="@color/gray"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人人都可享有"
            android:textSize="15sp"
            android:layout_marginTop="7dip"
            android:textColor="@color/gray"
            android:layout_gravity="center_horizontal"
            />


    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dip"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:padding="15dp"
        android:layout_marginRight="30dip"
        android:layout_marginLeft="30dip"
        >

        <GridLayout
            android:id="@+id/gl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rlGoPublishMerchandise"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="15dp"
                android:layout_margin="15dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/btPublishMerchandise"
                    android:background="@mipmap/imgpublishmerchandise" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btPublishMerchandise"
                    android:layout_centerHorizontal="true"
                    android:text="发表淮说"
                    android:textColor="@color/blue"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlGoPublishNeed"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_marginLeft="15dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btPublishNeed"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/imgpublishneed" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btPublishNeed"
                    android:layout_centerHorizontal="true"
                    android:text="失物寻物"
                    android:textColor="#7FC169"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlGoPublishcourierbring"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_marginRight="30dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btPublishcourierbring"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/publishcourierbring" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btPublishcourierbring"
                    android:layout_centerHorizontal="true"
                    android:textColor="#E968A1"
                    android:text="发布商品" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlGoPublishcouriertake"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_marginLeft="30dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btPublishcouriertake"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/loveyes" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btPublishcouriertake"
                    android:layout_centerHorizontal="true"
                    android:textColor="#eb4f38"
                    android:text="去表白" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlGoPublishjobe"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_marginLeft="30dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/iv_publish_partjobe"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/loveyes" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_publish_partjobe"
                    android:layout_centerHorizontal="true"
                    android:textColor="#eb4f38"
                    android:text="发布兼职" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlGoPublishactivitys"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_marginLeft="30dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/iv_publish_activities"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/loveyes" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_publish_activities"
                    android:layout_centerHorizontal="true"
                    android:textColor="#eb4f38"
                    android:text="发起活动" />
            </RelativeLayout>
        </GridLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dip"
        android:layout_alignParentBottom="true"
        >
        <ImageView
            android:id="@+id/iv_pop_more"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/add"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

</RelativeLayout>
