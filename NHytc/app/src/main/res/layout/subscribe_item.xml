<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/rl_subscribe_item"
        android:layout_width="match_parent"
        android:layout_height="80dip">


        <ImageView
            android:id="@+id/iv_pic_subscribe"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:src="@drawable/iconfont4"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/iv_to_detail_subscribe"
            android:layout_toRightOf="@+id/iv_pic_subscribe"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            >
            <TextView
                android:id="@+id/tv_name_subscribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="5dip"
                android:singleLine="true"
                android:text="校园头条"
                android:textSize="16sp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tv_introduce_subscribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:singleLine="true"
                android:layout_marginLeft="10dip"
                android:layout_marginBottom="5dip"
                android:textSize="12sp"
                android:text="校园新鲜事都在这里"
                />


        </RelativeLayout>


        <ImageView
            android:id="@+id/iv_to_detail_subscribe"
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:src="@drawable/iconfontright"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/ivory_background"
        />

</LinearLayout>
